@{
  Layout="Shared/_Layout.cshtml";
}

<h1>Add a new contact</h1>
<form action="/contact/new" method="post">

  <div class="form-group">
    <input id="contactFirstName" name="contactFirstName" type="text">
    <label for="contactFirstName">First Name</label>
  </div>
  <div class="form-group">
    <input id="contactLastName" name="contactLastName" type="text">
    <label for="contactLastName">Last Name</label>
  </div>
  <div class="form-group">
    <input id="contactAddress" name="contactAddress" type="text">
    <label for="contactAddress">Address</label>
  </div>
  <div class="form-group">
    <input id="contactPhone" name="contactPhone" type="text">
    <label for="contactPhone">Phone</label>
  </div>

  <button type="submit">Add Contact</button>
</form><br>

<p><a href="/">Return Home</a></p>
