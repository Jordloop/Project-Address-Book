@{
  Layout="Shared/_Layout.cshtml";
}

@if(@Model.Count == 0)
{
  <h2>Your address book is empty</h2>
}
else
{
    @foreach (var contact in Model)
  {

    <h3><a href="/contact/@contact.GetId()">@contact.GetFirstName() @contact.GetLastName()</a></h3>
  }
  <form action="/contacts/clear" method="post">
    <button type="submit" class="btn btn-danger">Clear all contacts</button>
  </form>
}

<h4><a href="/contact/create">Add a new contact<a/></h4>
